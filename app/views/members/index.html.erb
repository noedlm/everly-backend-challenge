<h1>Members List</h1>
<br>
<%= link_to 'New Member', new_member_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short URL</th>
      <th>Number of Friends</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name + ' ' + member.last_name %></td>
        <td><%= member.short_url %></td>
        <td><%= member.friends_count %>
        <td><%= link_to 'Show', member %></td>
      </tr>
    <% end %>
  </tbody>
</table>
